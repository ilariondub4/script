    const USER_CITIES = JSON.parse(localStorage.getItem('USER_CITIES') || '["OCP Michalovce", "OCP Bratislava"]'); // –ú–∞—Å–∏–≤ –º—ñ—Å—Ç
    let USER_CITY = USER_CITIES[currentCityIndex];

